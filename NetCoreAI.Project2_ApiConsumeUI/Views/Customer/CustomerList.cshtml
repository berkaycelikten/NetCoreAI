@model List<NetCoreAI.Project2_ApiConsumeUI.Dtos.ResultCustomerDto>
@{
    Layout = null;
    int count = 1;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Müşteri Listesi</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Müşteri Adı Soyadı</th>
                        <th>Bakiye</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>  
                            @{
                                count++;
                            }
                            <td>@item.CustomerName @item.CustomerSurname</td>
                            <td>@item.CustomerBalance.ToString("C")</td>
                            <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a></td>
                            <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-success btn-sm"><i class="bi bi-pencil-square"></i> Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a href="/Customer/CreateCustomer/" class="btn btn-primary btn-lg">
                <i class="bi bi-person-plus"></i> Yeni Müşteri Ekle
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
